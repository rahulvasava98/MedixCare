@model IEnumerable<MedixCare.Models.ApplicationUser>
@{
    ViewData["Title"] = "Admin Dashboard";
}

<section class="container">
    <h2>@ViewData["Title"]</h2>
    <p>Welcome to the Admin Dashboard!</p>

<table class="table">
    <thead>
        <tr>
            <th>FullName</th>
            <th>Role</th>
        </tr>
    </thead>
    <tbody>
            @foreach (var Department in ViewBag.Department)
        {
            <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(Department.Image))
                        {
                            <img src="~/images/Department/@Department.Image" class="object-fit-cover" alt="Image" width="100" height="100" />
                        }
                    </td>
                    <td>@Department.Name</td>
                    <td>@Department.Description</td>


            </tr>
        }
    </tbody>
</table>

</section>
